@model RedefinirSenhaModel
@{
    Layout = "_LayoutDeslogado";
    ViewData["Title"] = "Redefinir Senha";

}
@if (TempData["MensagemErro"] != null)
{
    <div class="alert alert-danger" role="alert">
        <button type="button" class="btn btn-danger btn-sm close-alert" data-bs-dismiss="alert" arial-label="Close">X</button>
        @TempData["MensagemErro"]
    </div>

}

<form asp-controller="Login" asp-action="EntrarLinkParaRedefinirSenha" method="post">
    <div class="mb-3">
        <label for="Login" class="form-label">Usuário</label>
        <input type="text" asp-for="Login" class="form-control" id="Login">
        @Html.ValidationMessageFor(x => x.Login)
    </div>
    <div class="mb-3">
        <label for="email" class="form-label">E-mail</label>
        <input type="text" asp-for="Email" class="form-control" id="email">
        @Html.ValidationMessageFor(x => x.Email)
    </div>
    
    <button type="submit" class="btn btn-primary">Redefinir Senha</button>
    <a class="btn btn-secondary btn -block" asp-action="Index" asp-controller="Login" role-button>Voltar</a>
</form>