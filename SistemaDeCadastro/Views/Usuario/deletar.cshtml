@using ControledeContatos.Models
@model ContatoModel
@{
    ViewData["Title"] = "Excluir Contato";
}

<div class="text-center">

    <h3>Realmente deseja apagar o contato (@Model.Nome)?</h3>


    <a class="btn btn-primary" role="button" asp-controller="Contato" asp-action="Apagar" asp-route-id="@Model.Id">Excluir Contato</a>
    <a class="btn btn-secondary" role="button" asp-controller="Contato" asp-action="Index">Voltar</a>
</div>
