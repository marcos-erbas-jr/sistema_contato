@using SistemaDeCadastro.Models
@{
    ViewData["Title"] = "Cadastrar Usuário";
}
@model UsuarioModel
<div class="text-center">

    <h1 class="display-4">Cadastrar Usuário</h1>
</div>

<form asp-controller="Usuario" asp-action="Criar" method="post">

    <div class="form-group">
        <label for="nome">Nome</label>
        <input type="text" asp-for="Nome" class="form-control" placeholder="Digite o nome">
        @Html.ValidationMessageFor(x => x.Nome)
    </div>
    <br />
    <div class="form-group">
        <label for="nome">Login</label>
        <input type="text" asp-for="Login" class="form-control" placeholder="Digite seu login">
        @Html.ValidationMessageFor(x => x.Login)
    </div>
    <br />
    <div class="form-group">
        <label for="email">Endereço de E-mail</label>
        <input type="email" asp-for="Email" class="form-control" placeholder="exemplo@email.com">
        @Html.ValidationMessageFor(x => x.Email)
    </div>
    <br />
    
    <div class="form-group">
        <label for="nome">Senha</label>
        <input type="password" asp-for="Senha" class="form-control" placeholder="Digite sua senha">
        @Html.ValidationMessageFor(x => x.Senha)
    </div>
    <br />
    <div class="form-group">
        <label for="nome">Perfil</label>
        <select asp-for="Perfil" class="form-control">
            <option value="0">Selecione</option>
            <option value="@SistemaDeCadastro.Enums.PerfilEnum.Admin">Administrador</option>
            <option value="@SistemaDeCadastro.Enums.PerfilEnum.Padrao">Padrão</option>
        </select>
        @Html.ValidationMessageFor(x => x.Email)
    </div>
    <br />
    <button type="submit" class="btn btn-primary">Registrar</button>
    <a class="btn btn-secondary" asp-controller="Usuario" asp-action="Index" role="button">Voltar</a>
</form>

